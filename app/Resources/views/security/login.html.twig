{% extends "layout.html.twig" %}

{% block page_title %}<h1>Connexion</h1>{% endblock %}

{% block content %}
    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
            {# récup les messages d'erreurs de notre authenticationUtils avec un filtre |trans de traduction dans le répertoire sécurity
            mais att ! messageKey peut contenir ses messages d'erreur en code, donc tjs traduire #}
        </div>
    {% endif %}
    <form method="post" action="">
        <div class="form-group">
            <label>Pseudo ou email</label>
            <input type="text" class="form-control" name="_username" value="{{ last_username }}" />
        </div>
        <div class="form-group">
            <label>Mot de passe</label>
            <input type="password" class="form-control" name="_password" />
        </div>
        <button type="submit" class="btn btn-warning">Se connecter</button>
    </form>
{% endblock %}
