{% extends "layout.html.twig" %}

{% block page_title %}
    <h1>
    {% if new %}
        Création rubrique
    {% else %}
        Modification rubrique
    {% endif %}
    </h1>
{% endblock %}

{% block content %}
    {{ form_start(form) }} {# ouvre la balise <form> #}
    {{ form_row(form.name) }} {# affiche l'élément de formulaire pour name #}
    <div class="form-btn-group pull-right">
        <button type="submit" class="btn btn-primary">Enregistrer</button>
        <a href="{{ path('app_admin_category_list') }}" class="btn btn-danger">Annuler</a>
    </div>
    {{ form_end(form) }} {# ferme la balise <form> #}

{% endblock %}