{% extends "layout.html.twig" %}

{% block page_title %}<h1>Gestion rubriques</h1>{% endblock %}

{% block content %}
    <p><a href="{{ path('app_admin_category_edit') }}">Ajouter une rubrique</a></p>
    {#path() récupère le bon chemin d'url à partir du nom de la route#}
    <table class="table table-striped">
        <tr class="warning">
            <th>Id</th>
            <th>Nom</th>
            <th width="100px"></th>
        </tr>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a href='{{ path('app_admin_category_edit', {"id": category.id}) }}' class='btn btn-success'>
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true" title="Modifier"></span>
                    </a>
                    <a href='{{ path('app_admin_category_delete', {"id": category.id}) }}' class='btn btn-danger'>
                        <span class="glyphicon glyphicon-trash" aria-hidden="true" title="Supprimer"></span>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr> {#on rentre dans ce else si le for ne ramène aucune ligne de résultat#}
                <td colspan="3" align="center">Aucun résultat</td>
            </tr>
        {% endfor %}
        
    </table>
{% endblock %}
